<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints" >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/TxtN1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Input the first number: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/TxtN2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtN1"
            android:text="Input the second number: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/EdtN1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textAlignment="viewEnd"
            android:layout_alignTop="@+id/TxtN1"
            android:layout_toRightOf="@+id/TxtN1"
            android:gravity="end"
            />

        <EditText
            android:id="@+id/EdtN2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textAlignment="viewEnd"
            android:layout_alignTop="@+id/TxtN2"
            android:layout_toRightOf="@+id/TxtN2"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/TxtN3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtN2"
            android:text="Choose operator: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

        <Spinner
            android:id="@+id/spnOp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TxtN3"
            android:layout_below="@+id/EdtN2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            />

        <Button
            android:id="@+id/btnResult"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Result"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_below="@+id/TxtN3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="155dp"
            />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/btnResult"
            android:layout_alignLeft="@id/btnResult"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>